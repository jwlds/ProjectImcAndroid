<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:context=".ResultImcActivity">

        <TextView
            android:id="@+id/labeAppResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SEU IMC:"
            android:layout_marginTop="120dp"
            android:textSize="38sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/etResultImc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="00.00"
            android:gravity="center"
            android:textSize="74sp"
            app:layout_constraintEnd_toEndOf="@+id/labeAppResult"
            app:layout_constraintStart_toStartOf="@+id/labeAppResult"
            app:layout_constraintTop_toBottomOf="@+id/labeAppResult"

            />


        <TextView
            android:id="@+id/etResultCheckImc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Obesidade classe III"
            android:gravity="center"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@+id/etResultImc"
            app:layout_constraintStart_toStartOf="@+id/etResultImc"
            app:layout_constraintTop_toBottomOf="@+id/etResultImc"

            />




        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:backgroundTint="@color/red"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
           />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>